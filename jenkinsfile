pipeline {
    agent {
        docker {
            image 'maven:3.8.4-jdk-11'   // Imagen Maven con JDK 11
            args '--privileged -v /var/run/docker.sock:/var/run/docker.sock' // Conectar Docker al host
        }
    }

    stages {
        stage('Clone repository') {
            steps {
                git credentialsId: 'taller3.2', url: 'https://github.com/ormorenoo/cucumber-pruebas.git', branch: 'master'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'mvn test'
            }
        }
    }
}