pipeline {
    agent any

    stages {
        stage('Clone repository') {
            steps {
                // Checkout the code using the stored credentials
                git credentialsId: 'taller3.2', url: 'https://github.com/ormorenoo/cucumber-pruebas.git', branch: 'master'
            }
        }

        stage('Run Tests') {
            steps {
                // Command to run your tests, for example:
                sh 'mvn test'
            }
        }
    }
}